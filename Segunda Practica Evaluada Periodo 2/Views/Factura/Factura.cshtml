@model Factura

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generar Factura</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .section-header { background-color: #F8C3C3; padding: 10px; text-transform: uppercase; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Generar Factura</h2>
        <form asp-action="Factura" method="post">
            <!-- Información de contacto -->
            <div class="section-header">Información de Contacto</div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label>Nombre y Apellido</label>
                    <input type="text" class="form-control" asp-for="NombreCliente" required />
                </div>
                <div class="col-md-6">
                    <label>Teléfono</label>
                    <input type="text" class="form-control" asp-for="TelefonoCliente" required />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <label>Dirección</label>
                    <input type="text" class="form-control" asp-for="DireccionCliente" required />
                </div>
            </div>

            <!-- Productos -->
            <div class="section-header mt-4">Productos</div>
            <div id="productos">
                @for (int i = 0; i < Model.Productos.Count; i++)
                {
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Descripción" asp-for="Productos[@i].Descripcion" required />
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control" placeholder="Cantidad" asp-for="Productos[@i].Cantidad" required />
                            </div>
                            <div class="col-md-3">
                                <input type="number" step="0.01" class="form-control" placeholder="Precio" asp-for="Productos[@i].Precio" required />
                            </div>
                        </div>
                }
            </div>

            <!-- Botón para agregar más productos -->
            <button type="button" class="btn btn-secondary mt-3" onclick="addProduct()">Agregar Producto</button>

            <!-- Totales -->
            <div class="row mt-4">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <p><strong>Sub Total:</strong> @Model.SubTotal.ToString("C")</p>
                    <p><strong>IVA:</strong> @Model.IVA.ToString("C")</p>
                    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                </div>
            </div>

            <!-- Botón para enviar el formulario -->
            <button type="submit" class="btn btn-primary mt-3">Calcular Total</button>
        </form>
    </div>

    <script>
        function addProduct() {
            var productosDiv = document.getElementById("productos");
            var newProductHtml = `
                <div class="row mt-2">
                    <div class="col-md-6">
                        <input type="text" class="form-control" placeholder="Descripción" name="Productos[${productosDiv.children.length}].Descripcion" required />
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control" placeholder="Cantidad" name="Productos[${productosDiv.children.length}].Cantidad" required />
                    </div>
                    <div class="col-md-3">
                        <input type="number" step="0.01" class="form-control" placeholder="Precio" name="Productos[${productosDiv.children.length}].Precio" required />
                    </div>
                </div>`;
            productosDiv.insertAdjacentHTML('beforeend', newProductHtml);
        }
    </script>
</body>
</html>
