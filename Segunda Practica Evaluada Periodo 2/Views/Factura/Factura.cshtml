@model FacturaViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Factura @Model.NumeroFactura</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header-logo {
            width: 100px;
        }
        .invoice-header {
            text-align: right;
        }
        .invoice-number {
            font-weight: bold;
        }
        .section-header {
            background-color: #F8C3C3;
            padding: 10px;
            text-transform: uppercase;
            font-weight: bold;
        }
        .calculate-btn {
            background-color: #2E79F8;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 25px;
            width: 100%;
        }
        .contact-info, .footer-info {
            font-size: 12px;
        }
        .total-section {
            background-color: #F8C3C3;
            padding: 10px;
            text-align: right;
        }
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="~/images/logo.png" alt="Mi Empresa" class="header-logo">
            </div>
            <div class="col-md-6 text-right invoice-header">
                <h4 class="invoice-number">FACTURA Nº @Model.NumeroFactura</h4>
            </div>
        </div>

        <!-- Información de contacto -->
        <div class="mt-4">
            <div class="section-header">Información de Contacto</div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <p><strong>Nombre y Apellido:</strong> @Model.NombreCliente</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Teléfono:</strong> @Model.TelefonoCliente</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p><strong>Dirección:</strong> @Model.DireccionCliente</p>
                </div>
            </div>
        </div>

        <!-- Tabla de productos -->
        <div class="table-responsive mt-4">
            <table class="table table-bordered text-center">
                <thead class="section-header">
                    <tr>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model.Productos)
                    {
                            <tr>
                                <td>@producto.Descripcion</td>
                                <td>@producto.Cantidad</td>
                                <td>@producto.Precio.ToString("C")</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Sección de totales -->
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <div class="total-section">
                    <p><strong>Sub Total:</strong> @Model.SubTotal.ToString("C")</p>
                    <p><strong>IVA:</strong> @Model.IVA.ToString("C")</p>
                    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                </div>
            </div>
        </div>

        <!-- Botón de calcular -->
        <div class="row mt-3">
            <div class="col-md-4 offset-md-8">
                <button class="calculate-btn">CALCULAR</button>
            </div>
        </div>

        <!-- Pie de página -->
        <div class="mt-5 text-center footer-info">
            <p>1234-5678 | hola@sitioincreible.com | Calle Cualquiera 123, Cualquier Lugar</p>
            <p>www.sitioincreible.com</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>